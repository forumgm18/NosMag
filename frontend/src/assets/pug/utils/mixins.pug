mixin payment-type()
  label.radio
    input(type="radio" name="orderPayment" value="Prepayment")
    span.radio-item
    span.radio-text
      span Предоплата заказа
      span.prepayment
        span
          svg.icon.icon-visa <use href="#icon-visa"></use>
        span
          svg.icon.icon-mastercard <use href="#icon-mastercard"></use>
        span
          svg.icon.icon-ymoney <use href="#icon-ymoney"></use>

  +radio("Оплата при получении", "", "orderPayment", "uponReceipt", "")

mixin payment-type2()
  .payment-type-block
    .payment-navs
      .payment-nav.active(data-payment-tab-id="prepayment")
        input(type="radio" name="orderPayment" value="Prepayment" hidden)
        span Предоплата заказа
      .payment-nav(data-payment-tab-id="upon-receipt")
        input(type="radio" name="orderPayment" value="uponReceipt" hidden)
        span Оплата при получении

  .payment-tabs
    .payment-tab.active(id="prepayment")
      label.payment-option
        input(type="radio" name="paymentOption" value="card" hidden data-payment-option)
        span
          svg.icon.icon-visa <use href="#icon-visa"></use>
        span
          svg.icon.icon-mastercard <use href="#icon-mastercard"></use>
        span Пластиковой картой
      label.payment-option
        input(type="radio" name="paymentOption" value="ymoney" hidden data-payment-option)
        span
          svg.icon.icon-ymoney <use href="#icon-ymoney"></use>
        span Ю-Money

    .payment-tab(id="upon-receipt")

mixin review-item(val)
  .review-item
    .review-item-title
      .review-user
        .review-user-avatar
          +svg("user")
        .review-user-info
          .review-user-name=val.name
          .review-user-date=val.date

      .review-rating
        +stars(val.rating)
    .review-text=val.text
    .review-answer
      .review-answer-title
        +svg("logo")
        span Ответ Представителя бренда
      .review-answer-text=val.answer
    .review-footer
      span Оценка полезна?
      span
        span.rating-useful.up
          +svg("review", "review-up")
          span 0
        span.rating-useful.down
          +svg("review", "review-down")
          span 0






