      class: "header-select",
      triangleClass: "triangle",
      values: [
        {optionValue: "v1", text: "О Компании"},
        {optionValue: "v2", text: "Как заказать"},
        {optionValue: "v3", text: "Доставка и оплата"},
        {optionValue: "v4", text: "Качество и гарантии"},
        {optionValue: "v5", text: "Накопительная скидка до 40%"},
        {optionValue: "v6", text: "Оптовикам"},
        {optionValue: "v7", text: "Партнерская программа"},
        {optionValue: "v8", text: "Реквизиты"},
        {optionValue: "v9", text: "Полезное / подсказки"},
      ]
    }
  var selectTown = {
      id: "selectTown",
      name: "selectTown",
      title: "Выберите город",
      class: "header-select",
      triangleClass: "triangle",
      values: [
        {optionValue: "Комсомольск-на-амуре", text: "Комсомольск-на-амуре"},
        {optionValue: "Москва", text: "Москва"},
