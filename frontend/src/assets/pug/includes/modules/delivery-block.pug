      //  .description-text Срок доставки 2-3 дня.<br>Цена 450 руб.



  .delivery-nav-item(data-nav-id="courier" data-default-tc="sdek")
    div
      .delivery-nav-item-title
        span Курьером
        +checkbox2("День в день", "day2day","vch", "")
        //+checkbox("День в день", "","day2day","vch", "")
      .delivery-nav-item-body
        +radio-svg("", "sdek", "deliveryCompany", "sdek")
        //+radio("DPD", "dpd", "deliveryCompany", "dpd", "")
        +radio-svg("", "dostavista", "deliveryCompany", "dostavista")
        +radio-svg("", "ya-go", "deliveryCompany", "yago")

    .delivery-tab.active(data-tab-id="courier")
      .delivery-description.active(data-description="sdek")
        h3.description-title Курьерская доставка СДЭК
        .description-text Срок доставки 2-3 дня.<br>Цена 350 руб.
        a(href="#order-map" data-modal) Выберите адрес доставки
      //.delivery-description(data-description="dpd")
